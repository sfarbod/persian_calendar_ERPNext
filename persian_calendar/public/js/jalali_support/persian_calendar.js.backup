      // Insert calendar after input
      $input.after($calendar);
      console.log('Calendar created and inserted:', $calendar.length, $calendar);
      
      // Current Jalali date - get current date
      const now = new Date();
      let currentJalali = gToJ(now);
      
      // Store calendar reference for easy access
      me.$jalaliCalendar = $calendar;
      
      // Update calendar display
      const updateCalendar = () => {
        console.log('updateCalendar called, currentJalali:', currentJalali);
        const monthNames = ['فروردین', 'اردیبهشت', 'خرداد', 'تیر', 'مرداد', 'شهریور', 
                          'مهر', 'آبان', 'آذر', 'دی', 'بهمن', 'اسفند'];
        
        $calendar.find('.current-month-year').text(`${monthNames[currentJalali.jm - 1]} ${currentJalali.jy}`);
        console.log('Month/Year updated:', `${monthNames[currentJalali.jm - 1]} ${currentJalali.jy}`);
        
        // Update weekdays based on FIRST_DAY with Frappe styling
        const weekdayNames = ['ی', 'د', 'س', 'چ', 'پ', 'ج', 'ش']; // Sunday=0 to Saturday=6
        const $weekdaysContainer = $calendar.find('.datepicker--days-names');
        $weekdaysContainer.empty();
        
        // Start from FIRST_DAY and cycle through 7 days
        for (let i = 0; i < 7; i++) {
          const dayIndex = (FIRST_DAY + i) % 7;
          const $weekday = $(`<div class="datepicker--day-name" style="text-align: center; font-weight: 500; padding: 6px; color: var(--text-color); font-size: 11px; text-transform: uppercase;">${weekdayNames[dayIndex]}</div>`);
          $weekdaysContainer.append($weekday);
        }
        
        // Generate days for current month with Frappe styling
        const daysInMonth = currentJalali.jm <= 6 ? 31 : (currentJalali.jm <= 11 ? 30 : (currentJalali.jy % 4 === 3 ? 30 : 29));
        console.log('Days in month:', daysInMonth, 'for month:', currentJalali.jm);
        const $daysContainer = $calendar.find('.jalali-days-grid');
        console.log('Days container found:', $daysContainer.length);
        $daysContainer.empty();
        
        for (let day = 1; day <= daysInMonth; day++) {
          const $day = $(`<div class="jalali-day-cell" data-day="${day}" style="text-align: center !important; padding: 8px !important; cursor: pointer !important; border-radius: 4px !important; transition: all 0.15s ease !important; font-size: 13px !important; font-weight: 400 !important; color: #333 !important; min-height: 32px !important; display: flex !important; align-items: center !important; justify-content: center !important; background: transparent !important; border: none !important; width: 100% !important; height: 32px !important; visibility: visible !important; opacity: 1 !important; position: relative !important; z-index: 1 !important;">${day}</div>`);
          
          // Add hover effect with Frappe styling
          $day.on('mouseenter', function() {
            if (!$(this).hasClass('-selected-') && !$(this).hasClass('-current-')) {
              $(this).css('background-color', 'var(--fg-hover-color)');
            }
          }).on('mouseleave', function() {
            if (!$(this).hasClass('-selected-') && !$(this).hasClass('-current-')) {
              $(this).css('background-color', '');
            }
          });
          
          // Highlight today with Frappe styling
          const today = gToJ(new Date());
          if (currentJalali.jy === today.jy && currentJalali.jm === today.jm && day === today.jd) {
            $day.addClass('-current-').css({
              'background-color': 'var(--date-range-bg)',
              'color': 'var(--text-color)',
              'font-weight': 'var(--weight-bold)'
            });
          }
          
          // Highlight selected day if it matches input value with Frappe styling
          const inputValue = $input.val();
          if (inputValue) {
            const jalali = parseJalaliDate(inputValue);
            if (jalali && jalali.jy === currentJalali.jy && jalali.jm === currentJalali.jm && jalali.jd === day) {
              $day.addClass('-selected-').css({
                'background-color': 'var(--date-active-bg)',
                'color': 'var(--date-active-text)',
                'border-radius': 'var(--border-radius-tiny)'
              });
            }
          }
          
          // Day click handler
          $day.on('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            const selectedDay = parseInt($(this).data('day'));
            console.log('Selected day:', selectedDay, 'Current Jalali before:', currentJalali);
            
            // Check if this day is already selected (has active background)
            const isAlreadySelected = $(this).hasClass('-selected-');
            
            if (isAlreadySelected) {
              // If clicking on already selected day, clear the selection
              console.log('Clearing selection for day:', selectedDay);
              
              // Remove highlight from all days
              $calendar.find('.jalali-day-cell').removeClass('-selected-').css({
                'background-color': '',
                'color': '#333'
              });
              
              // Clear input value
              $input.val('');
              
              // Close calendar immediately
              console.log('Hiding calendar...');
              $calendar.hide();
              
              // Set empty value using Frappe's method
              setTimeout(() => {
                console.log('Calling set_value with empty string...');
                me.set_value('');
              }, 10);
              
              return; // Exit early
            }
            
            // Create a fresh Jalali date object with the selected day
            const newJalali = {
              jy: currentJalali.jy,
              jm: currentJalali.jm,
              jd: selectedDay
            };
            console.log('New Jalali:', newJalali);
            
            const jalaliStr = formatJalaliDate(newJalali.jy, newJalali.jm, newJalali.jd);
            console.log('Setting Jalali string:', jalaliStr);
            
            // Convert to Gregorian for storage
            const gregorian = jToG(newJalali.jy, newJalali.jm, newJalali.jd);
            const gregorianStr = `${gregorian.gy}-${String(gregorian.gm).padStart(2, '0')}-${String(gregorian.gd).padStart(2, '0')}`;
            console.log('Setting Gregorian string:', gregorianStr);
            
            // Update current Jalali date first
            currentJalali.jd = selectedDay;
            
                // Update calendar to highlight selected day immediately with Frappe styling
                $calendar.find('.jalali-day-cell').removeClass('-selected-').css({
                  'background-color': '',
                  'color': '#333'
                });
            $(this).addClass('-selected-').css({
              'background-color': 'var(--date-active-bg)',
              'color': 'var(--date-active-text)',
              'border-radius': 'var(--border-radius-tiny)'
            });
            
            // Set input value directly first
            $input.val(jalaliStr);
            
            // Close calendar immediately
            console.log('Hiding calendar...');
            $calendar.hide();
            
            // Set the value using Frappe's method after hiding calendar
            setTimeout(() => {
              console.log('Calling set_value...');
              me.set_value(gregorianStr);
            }, 10);
          });
          
          $daysContainer.append($day);
        }
        console.log('Total days appended:', $daysContainer.children().length);
        console.log('Days container HTML:', $daysContainer.html().substring(0, 200) + '...');
        console.log('First day element:', $daysContainer.children().first()[0]);
      };
      
      // Navigation handlers with hover effects
      $calendar.find('.prev-year, .next-year, .prev-month, .next-month').on('mouseenter', function() {
        $(this).css('background-color', 'var(--fg-hover-color)');
      }).on('mouseleave', function() {
        $(this).css('background-color', 'transparent');
      });
      
      $calendar.find('.prev-year').on('click', () => {
        currentJalali.jy--;
        updateCalendar();
      });
      
      $calendar.find('.next-year').on('click', () => {
        currentJalali.jy++;
        updateCalendar();
      });
      
      $calendar.find('.prev-month').on('click', () => {
        if (currentJalali.jm === 1) {
          currentJalali.jm = 12;
          currentJalali.jy--;
        } else {
          currentJalali.jm--;
        }
        updateCalendar();
      });
      
      $calendar.find('.next-month').on('click', () => {
        if (currentJalali.jm === 12) {
          currentJalali.jm = 1;
          currentJalali.jy++;
        } else {
          currentJalali.jm++;
        }
        updateCalendar();
      });
      
      // Month/year title hover effect
      $calendar.find('.current-month-year').on('mouseenter', function() {
        $(this).css('background-color', 'var(--fg-hover-color)');
      }).on('mouseleave', function() {
        $(this).css('background-color', 'transparent');
      });
      
      // Click on month/year to show quick selection
      $calendar.find('.current-month-year').on('click', () => {
        const newYear = prompt('سال جدید را وارد کنید:', currentJalali.jy);
        if (newYear && !isNaN(newYear) && newYear > 1300 && newYear < 1500) {
          currentJalali.jy = parseInt(newYear);
          updateCalendar();
        }
      });

          // Today button handler
          $calendar.find('.today-btn').on('click', () => {
            const today = new Date();
            const todayJalali = gToJ(today);
            
            // Set to today's date
            currentJalali = { jy: todayJalali.jy, jm: todayJalali.jm, jd: todayJalali.jd };
            
            const jalaliStr = formatJalaliDate(todayJalali.jy, todayJalali.jm, todayJalali.jd);
            $input.val(jalaliStr);
            
            // Convert to Gregorian for storage
            const gregorian = jToG(todayJalali.jy, todayJalali.jm, todayJalali.jd);
            const gregorianStr = `${gregorian.gy}-${String(gregorian.gm).padStart(2, '0')}-${String(gregorian.gd).padStart(2, '0')}`;
            
            // Set the value using Frappe's method
            me.set_value(gregorianStr);
            
            // Force update the input display
            setTimeout(() => {
              if ($input.val() !== jalaliStr) {
                $input.val(jalaliStr);
              }
            }, 100);
            
            // Update calendar and close
            updateCalendar();
            $calendar.hide();
          });
      
      // Show calendar on input click
      $input.on('click', (e) => {
        console.log('Input clicked, showing calendar...');
        e.preventDefault();
        e.stopPropagation();
        
        // Set current month to input value if exists
        const inputValue = $input.val();
        if (inputValue) {
          const jalali = parseJalaliDate(inputValue);
          if (jalali) {
            currentJalali = { jy: jalali.jy, jm: jalali.jm, jd: jalali.jd };
          }
        }
        
        // Position calendar first
        const inputRect = $input[0].getBoundingClientRect();
        console.log('Input rect:', inputRect);
        
        $calendar.css({
          position: 'fixed',
          top: (inputRect.bottom + 5) + 'px',
          left: inputRect.left + 'px',
          display: 'block',
          visibility: 'visible',
          opacity: '1',
          zIndex: '99999'
        });
        
        // Update calendar content after positioning
        updateCalendar();
        
        console.log('Calendar should be visible now, display:', $calendar.css('display'));
        console.log('Calendar visibility:', $calendar.css('visibility'));
        console.log('Calendar opacity:', $calendar.css('opacity'));
        console.log('Calendar position:', {
          top: $calendar.css('top'),
          left: $calendar.css('left'),
          position: $calendar.css('position'),
          zIndex: $calendar.css('z-index'),
          width: $calendar.css('width'),
          height: $calendar.css('height')
        });
        console.log('Calendar element:', $calendar[0]);
        console.log('Calendar offset:', $calendar.offset());
        console.log('Calendar is visible?', $calendar.is(':visible'));
        
        // Force show with timeout
        setTimeout(() => {
          console.log('Timeout - forcing calendar to show');
          $calendar.show();
          console.log('After show() - display:', $calendar.css('display'));
          console.log('After show() - is visible?', $calendar.is(':visible'));
        }, 100);
      });
      
      // Hide calendar when clicking outside
      $(document).on('click', (e) => {
        if (!$(e.target).closest('.jalali-calendar, .datepicker, .form-control').length) {
          $calendar.hide();
        }
      });
      
      // Initialize calendar
      updateCalendar();
    }

        set_formatted_input(value) {
          try {
            const r = super.set_formatted_input(value);

            // Convert Gregorian to Jalali for display
            if (value) {
              const gregorianDate = new Date(value + 'T00:00:00Z');
              const jalali = gToJ(gregorianDate);
